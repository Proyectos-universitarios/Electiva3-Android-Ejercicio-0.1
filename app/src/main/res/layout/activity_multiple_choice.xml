<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MultipleChoiceActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="441dp" android:choiceMode="multipleChoice"
                android:id="@+id/lvLista">
        </ListView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Seleccionar"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content" android:id="@+id/btnSeleccion" android:onClick="Seleccionar"/>
            <Button
                    android:text="Salir"
                    android:layout_width="203dp"
                    android:layout_height="wrap_content" android:id="@+id/btnSalir" android:onClick="Salir"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>